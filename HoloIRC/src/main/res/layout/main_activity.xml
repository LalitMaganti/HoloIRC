<?xml version="1.0" encoding="utf-8"?>

<com.fusionx.lightirc.ui.widget.ProgrammableSlidingPaneLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sliding_pane_layout">

    <FrameLayout
            android:id="@+id/sliding_list_frame"
            android:layout_width="240dp"
            android:layout_height="match_parent"/>

    <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <RelativeLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/main_background">
            <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_frame_empty_textview"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="Welcome to HoloIRC! Click a server on the right to connect :)"
                    android:textColor="@android:color/darker_gray"
                    android:textAppearance="@android:style/TextAppearance.Large"/>
        </RelativeLayout>

        <FrameLayout
                android:id="@+id/right_drawer"
                android:layout_width="250dip"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:divider="@android:color/transparent"
                android:background="?attr/main_background"/>
    </android.support.v4.widget.DrawerLayout>
</com.fusionx.lightirc.ui.widget.ProgrammableSlidingPaneLayout>